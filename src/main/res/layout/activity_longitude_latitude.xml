<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.calculator.villardo.placebadges.LongitudeLatitude"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/latitude_edit_text"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:inputType="numberSigned|numberDecimal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude"
        android:id="@+id/textView4"
        android:layout_below="@+id/latitude_edit_text"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/longitude_edit_text"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:inputType="numberDecimal|numberSigned"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Location"
        android:id="@+id/set_location_button"
        android:layout_below="@+id/longitude_edit_text"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:padding="0dp"
        android:background="@color/colorPrimaryLight"
        android:layout_alignEnd="@+id/longitude_edit_text"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>
</RelativeLayout>
