<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
   >

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="5dp"
        android:background="@drawable/background_round_corners"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="88dp"
            android:id="@+id/badge_imageview"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place:"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/place_textview"
            android:layout_toEndOf="@+id/badge_imageview" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country:"
            android:id="@+id/textView2"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/badge_imageview"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/place_textview"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/country_textview"
            android:layout_marginTop="5dp"
            android:textSize="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/country_textview"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView2"
            android:textSize="10dp"/>
    </RelativeLayout>

</RelativeLayout>